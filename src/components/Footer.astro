---
import { Icon } from 'astro-icon/components';

const footerItems = [
  { icon: 'fa6-brands:linkedin-in', link: 'https://www.linkedin.com/in/kndshein' },
  { icon: 'fa6-brands:instagram', link: 'https://www.instagram.com/durian.puberty' },
  { icon: 'fa6-brands:medium', link: 'https://medium.com/@kndshein' },
];
---

<footer class="footer-container">
  <div class="social-links">
    <ul>
      {
        footerItems.map((item) => {
          return (
            <li>
              <a
                target="_blank"
                rel="noopener noreferrer"
                href="https://www.linkedin.com/in/kndshein/"
              >
                <Icon name={item.icon} />
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>
  <div class="footer-text">
    All works Â© 2020 - {new Date().getFullYear()} Kaung Nan Dar Shein. All rights reserved, I suppose.
    Powered by insomnia and unemployed tears.
  </div>
</footer>

<style>
  .footer-container {
    position: absolute;
    left: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    padding: 0 20px 20px;
  }

  .social-links {
    margin-bottom: 15px;

    ul {
      display: flex;
      justify-content: space-around;
    }

    li {
      list-style-type: none;
      margin-right: 15px;
    }

    svg {
      width: 20px;
      height: 20px;
      color: var(--footer-icon);

      &:hover {
        color: var(--color-primary);
      }
    }
  }

  .footer-text {
    color: var(--color-accent);
    text-align: center;
    font-size: 1rem;
    line-height: 1.3rem;
  }

  @media (hover: none), (hover: on-demand) {
    .social-links {
      a {
        &:hover {
          svg {
            color: var(--color-accent);
          }
        }
      }
    }
  }
</style>
