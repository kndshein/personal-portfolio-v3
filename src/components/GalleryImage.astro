---
import { Image } from 'astro:assets';
import type { ImageType, ImagesType } from '../types/gallery';

interface Props {
  image: ImageType;
  allImages: ImagesType;
}

const { image } = Astro.props;
---

<Image
  class="image"
  src={`https://${image.fields.file?.url}`}
  alt={image.fields.description || ''}
  width={800}
  inferSize
/>

<style>
  img {
    display: block;
    height: 100%;
    width: 100%;
  }
</style>
