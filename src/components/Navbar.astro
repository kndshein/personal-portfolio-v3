---
const navItems = [
  {
    name: 'I code.',
    link: '/code',
  },
  {
    name: 'I design.',
    link: '/design',
  },
  {
    name: 'I snap.',
    link: '/snap',
  },
  {
    name: 'I am.',
    link: '/about',
  },
];
---

<div id="overlay">
  <div class="overlay-content">
    {
      navItems.map((item) => {
        return (
          <li>
            <a href={item.link}>{item.name}</a>
          </li>
        );
      })
    }
  </div>
</div>
<div class="navbar-container">
  <nav class="navbar">
    <a href="/" id="logo"> Kaung Nan Dar Shein </a>
    <div id="mobile-nav">
      <div class="menu-button" role="button" tabindex={0}>
        <div class="menu-button-burger"></div>
      </div>
      <div class="overlay-background"></div>
    </div>
    <ul class="navbar-links">
      {
        navItems.map((item) => {
          return (
            <li>
              <a href={item.link}>{item.name}</a>
            </li>
          );
        })
      }
    </ul>
  </nav>
</div>

<style>
  .navbar-container {
    z-index: 10;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 75px;
    background-color: var(--color-bg);

    #logo {
      text-transform: uppercase;
      font-family: var(--font-title);
      font-weight: 600;
      font-size: var(--logo-font-size);
      line-height: var(--logo-line-height);
      color: var(--color-primary)

      &:hover {
        color: var(--color-accent);

        @media (hover: none), (hover: on-demand) {
          color: var(--color-primary);
        }
      }
    }

    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 100%;
      max-width: var(--view-size);
      padding: 20px 20px;
      margin: 0 auto;

      #mobile-nav {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 33px;
        height: 33px;

        .menu-button {
          z-index: 11;
          position: relative;
          display: flex;
          justify-content: center;
          align-items: center;
          width: 25px;
          height: 25px;
          cursor: pointer;
          transition: 0.1s ease-in-out;

          .menu-button-burger {
            width: 20px;
            height: 4px;
            border-radius: 2px;
            transition: 0.1s ease-in-out;
            background: var(--color-primary);

            &::before,
            &::after {
              content: '';
              position: absolute;
              width: 15px;
              height: 4px;
              border-radius: 2px;
              transition: 0.1s ease-in-out;
              background: var(--color-primary);
            }

            &::before {
              transform: translateY(-7px);
              transition: 0.1s ease-in-out;
            }

            &::after {
              transform: translateY(7px);
              transition: 0.1s ease-in-out;
            }
          }

          &.open {
            .menu-button-burger {
              transform: translateX(10px);
              transition: 0.1s ease-in-out;
              background: transparent;

              &::before {
                transform: rotate(45deg) translate(-9px, 9px);
                width: 20px;
                transition: 0.1s ease-in-out;
              }

              &::after {
                transform: rotate(-45deg) translate(-9px, -9px);
                width: 20px;
                transition: 0.1s ease-in-out;
              }
            }
          }
        }

        .overlay-background {
          z-index: -1;
          position: absolute;
          width: 0;
          height: 0;
          border-radius: 50%;
          transition: 0.5s ease-in-out;
          background-color: var(--overlay-bg);

          &.open {
            height: 300vmax;
            width: 300vmax;
            background-color: var(--overlay-bg);
          }
        }
      }

      .navbar-links {
        display: none;
      }
    }
  }
</style>
